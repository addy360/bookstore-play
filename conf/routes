# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()

GET     /books                      controllers.BooksController.index

GET     /books/:id                  controllers.BooksController.show(id:Int)

GET     /books/:id/edit             controllers.BooksController.edit(id:Int)

POST    /books                      controllers.BooksController.store(request:Request)

POST    /books/:id/update           controllers.BooksController.update( id:Int,request:Request)

GET     /books/:id/delete           controllers.BooksController.delete(id:Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
